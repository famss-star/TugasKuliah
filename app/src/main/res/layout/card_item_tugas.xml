<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/namaTugasTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Tugas"
                android:textColor="@color/softBlue"
                android:textSize="22dp"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editButton"
                android:src="@drawable/outline_add_24"
                android:tint="@color/softBlue"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="28dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deleteButton"
                android:src="@drawable/outline_archive_24"
                android:tint="@color/softBlue"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>


        <TextView
            android:id="@+id/mataKuliahTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mata Kuliah"
            android:textColor="@color/softBlue"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/namaDosenTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Dosen Pengampu"
            android:textColor="@color/softBlue"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/deadlineTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline"
            android:textColor="@color/softBlue"
            android:textSize="18dp"
            />
    </LinearLayout>


</androidx.cardview.widget.CardView>